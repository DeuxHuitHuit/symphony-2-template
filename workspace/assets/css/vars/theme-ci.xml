<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../../dev/theme/index.ui" ?>
<themes>
	<theme type="site">

		<!-- Colors -->
		<colors>
			<type name="symbolic">
				<black value="#181818" />
			</type>

			<type name="symbolic">
				<accent-text value="@black" />
				<accent-fill value="@black" />
				<valid-fill value="@black" />
				<valid-text value="@black" />
				<error-fill value="@black" />
				<error-text value="@black" />
				<main-stroke-darker value="@black" />
				<main-reversed-fill value="@black" />
				<main-reversed-text value="@black" />
				<error-text-lighter value="@black" />
				<error-stroke-darker value="@black" />
				<accent-text-lighter value="@black" />
				<accent-stroke-darker value="@black" />
				<accent-reversed-fill value="@black"/>
				<accent-reversed-text value="@black"/>
			</type>
		</colors>

		<!-- spacing -->
		<spacing>
			<nano     value="1rem" />
			<thinnest value="1.2rem" />
			<thinner  value="1.4rem" />
			<thin     value="2rem" />
			<broad    value="4rem" />
		</spacing>

		<dimensions>
			<tiniest  value="@spacing-thin * 18" />
		</dimensions>

		<typographie>
			<fonts>
				<base   value="'Helvetica', sans-serif" />
			</fonts>
			<fonts-size>
				<short   value="1.4rem" />
			</fonts-size>
			<line-height>
				<normal     value="1.8em" />
			</line-height>
			<letter-spacing>
				<!-- <narrowest value="-0.14em" /> -->
			</letter-spacing>
		</typographie>
		<opacity>
			<transparent           value="0" />
			<opaque                value="1" />
		</opacity>
		<border>
			<size>
				<slimmest value="1px" />
			</size>
			<radius>
				<sharpest value="2px" />
			</radius>
		</border>
		<transition>
			<duration>
				<fastest value="150ms"/>
			</duration>
			<ease>
				<standard     value="linear" />
			</ease>
		</transition>
	</theme>
</themes>
